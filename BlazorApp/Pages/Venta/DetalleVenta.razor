@page "/venta/detalle/{VentaId:int}"
@attribute [Authorize]
@using DTOs
@using ApiClient
@inject VentaApiClient ventaApiClient
@inject NavigationManager NavigationManager

<div class="form-container">
    @if (isLoading)
    {
        <div class="tbl-state"><i class="bi bi-arrow-repeat spin"></i> Cargando detalle de la venta...</div>
    }
    else if (venta == null)
    {
        <div class="alert alert-danger">No se encontró la venta especificada.</div>
        <div class="form-actions">
            <button class="btn btn-secondary" @onclick="Volver">
                <i class="bi bi-arrow-left"></i> Volver al Listado
            </button>
        </div>
    }
    else
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="form-title mb-0">Detalle de Venta #@venta.IdVenta</h3>

            <div class="d-flex gap-2">
                @if (venta.Estado?.Equals("Pendiente", StringComparison.OrdinalIgnoreCase) == true)
                {
                    <button class="btn btn-primary" @onclick="IrAEditar">
                        <i class="bi bi-pencil-square"></i> Editar
                    </button>
                }
                <button class="btn btn-secondary" @onclick="Volver">
                    <i class="bi bi-arrow-left"></i> Volver al Listado
                </button>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-4"><strong>Vendedor:</strong> @venta.NombreVendedor</div>
            <div class="col-md-4"><strong>Fecha:</strong> @venta.Fecha.ToString("dd/MM/yyyy HH:mm")</div>
            <div class="col-md-4"><strong>Estado:</strong> @venta.Estado</div>
        </div>

        <div class="tbl-wrapper">
            <table class="tbl">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th class="tbl-text-end">Precio Unit.</th>
                        <th class="tbl-text-end">Cantidad</th>
                        <th class="tbl-text-end">Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var l in venta.Lineas ?? new())
                    {
                        <tr>
                            <td>@l.NombreProducto</td>
                            <td class="tbl-text-end">@l.PrecioUnitario.ToString("C")</td>
                            <td class="tbl-text-end">@l.Cantidad</td>
                            <td class="tbl-text-end">@l.Subtotal.ToString("C")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="tbl-total-row">
                        <td colspan="3" class="tbl-text-end"><strong>TOTAL:</strong></td>
                        <td class="tbl-text-end"><strong>@((venta.Lineas ?? new()).Sum(x => x.Subtotal).ToString("C"))</strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    }
</div>

@code {
    [Parameter] public int VentaId { get; set; }
    private VentaDTO? venta;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        venta = await ventaApiClient.GetByIdAsync(VentaId);
        isLoading = false;
    }

    private void Volver() => NavigationManager.NavigateTo("/venta");
    private void IrAEditar() => NavigationManager.NavigateTo($"/venta/editar/{VentaId}");
}
