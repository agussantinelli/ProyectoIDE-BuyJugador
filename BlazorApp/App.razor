@using BlazorApp.Shared
@using Microsoft.AspNetCore.Components.Authorization

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(Layout.MainLayout)">
                <NotAuthorized>
                    @if (context?.User?.Identity?.IsAuthenticated == false)
                    {
                        <LayoutView Layout="@typeof(Layout.EmptyLayout)">
                            <RedirectToLogin />
                        </LayoutView>
                    }
                    else
                    {
                        <LayoutView Layout="@typeof(Layout.MainLayout)">
                            <div class="alert alert-danger m-4">
                                <h3>Acceso Denegado</h3>
                                <p>No tienes los permisos necesarios para acceder a este recurso.</p>
                            </div>
                        </LayoutView>
                    }
                </NotAuthorized>

                <Authorizing>
                    <LayoutView Layout="@typeof(Layout.EmptyLayout)">
                        <div class="splash">
                            <div class="splash-card">
                                <h3>Verificando sesión…</h3>
                                <div class="spinner"><div></div><div></div><div></div></div>
                            </div>
                        </div>
                    </LayoutView>
                </Authorizing>
            </AuthorizeRouteView>

            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>

        <NotFound>
            <PageTitle>No encontrado</PageTitle>
            <LayoutView Layout="@typeof(Layout.EmptyLayout)">
                <div class="splash">
                    <div class="splash-card">
                        <h3>Página no encontrada</h3>
                        <p class="muted">Lo sentimos, no hay nada en esta dirección.</p>
                        <a href="/" class="btn btn-primary">Volver al inicio</a>
                    </div>
                </div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
